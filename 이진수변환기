<body>
  <div class="container">
    <h1>8비트 이진수 변환기</h1>
    <div class="desc">
      0~255 사이의 10진수를 입력하면<br>
      8비트 이진수로 변환됩니다.
    </div>

    <div class="input-area">
      <input type="number" id="decimal" min="0" max="255" placeholder="10진수 입력">
      <button onclick="convert()">변환</button>
    </div>

    <div class="bits" id="bits"></div>
    <div class="weights">
      <div>128</div><div>64</div><div>32</div><div>16</div>
      <div>8</div><div>4</div><div>2</div><div>1</div>
    </div>

    <div class="error" id="error"></div>
  </div>

  <script>
    const bitsContainer = document.getElementById('bits');
    const errorMsg = document.getElementById('error');

    // 초기 0 표시
    for (let i = 0; i < 8; i++) {
      const div = document.createElement('div');
      div.className = 'bit';
      div.textContent = '0';
      bitsContainer.appendChild(div);
    }

    function convert() {
      const value = Number(document.getElementById('decimal').value);
      errorMsg.textContent = '';

      if (isNaN(value) || value < 0 || value > 255) {
        errorMsg.textContent = '0 ~ 255 사이의 숫자를 입력하세요.';
        return;
      }

      const binary = value.toString(2).padStart(8, '0');
      const bits = document.querySelectorAll('.bit');

      bits.forEach((bit, index) => {
        bit.textContent = binary[index];
        bit.classList.toggle('on', binary[index] === '1');
      });
    }
  </script>
</body>
